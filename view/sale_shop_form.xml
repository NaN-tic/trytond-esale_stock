<data>
    <xpath
        expr="/form/notebook/page[@id='esale']/notebook/page[@id='actions']/notebook/page[@id='orders']"
        position="after">
        <page string="Stock" id="stock" col="4">
            <button name="export_stocks"/>
            <label name="esale_last_stocks"/>
            <field name="esale_last_stocks"/>
        </page>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='esale']/notebook/page[@id='configuration']/notebook/page[@id='general']/field[@name='esale_timezone']"
        position="after">
            <label name="esale_forecast_quantity"/>
            <field name="esale_forecast_quantity"/>
            <label name="esale_product_move_stocks"/>
            <field name="esale_product_move_stocks"/>
            <newline/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='esale']/notebook/page[@id='configuration']/notebook/page[@id='general']/field[@name='esale_export_sale_filename']"
        position="after">
            <label name="esale_export_stock_filename"/>
            <field name="esale_export_stock_filename"/>
    </xpath>
</data>
